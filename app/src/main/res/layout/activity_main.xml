<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtTitulo"
        android:layout_height="wrap_content"
        android:text="Estatísticas dos jogos"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_min_temporada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="Mínimo da temporada:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <TextView
        android:id="@+id/txt_max_temporada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="Máximo da temporada:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/txt_min_temporada"
        />

    <TextView
        android:id="@+id/txt_recorde_minimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="Quebra recorde mínimo:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/txt_max_temporada"
        />

    <TextView
        android:id="@+id/txt_recorde_maximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="Quebra recorde máximo:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/txt_recorde_minimo"
        />

    <Button
        android:id="@+id/btnConsultarJogos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar jogos"
        android:backgroundTint="@color/Cinza"
        android:onClick="ConsultarJogos"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_recorde_maximo"
        android:layout_marginTop="8dp"/>
</RelativeLayout>